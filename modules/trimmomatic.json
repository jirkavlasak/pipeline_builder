{
  "name": "Trimmomatic",
  "description": "Flexible read trimming tool for Illumina NGS data.",
  "url": "http://www.usadellab.org/cms/?page=trimmomatic",
  "input": ["*.fastq.gz"],
  "output": ["*_trimmed.fastq.gz"],
  "container": "quay.io/biocontainers/trimmomatic:0.39--hdfd78af_2",
  "parameters": {
    "phred": {
      "description": "Phred quality encoding.",
      "default": "33"
    },
    "minlen": {
      "description": "Minimum read length.",
      "default": "36"
    }
  },
  "command": "trimmomatic SE -phred{phred} {input} {output} MINLEN:{minlen}"
}